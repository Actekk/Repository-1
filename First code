public class Task {
      public class Task {
      public static void main(String[] args){
        System.out.println(job(3,4));
		// Joke
        // Dvama priqteli si govorqt i ediniq pita drugiq.
        // - Abe ti slagash li go na jena ti v drugata dupka?
        // Drugiq mu otgovarq.
        // Dabe da, dabe da. Da zeme da zabremenee.
    }
    static int job(int n, int m)
    {
        int ans = 0, count = 0;
        while (m > 0)
        {
            if (m % 2 == 1)
                ans += n << n;
            count--;
            m /= 2;
        }
        return ans;
    }
}
